import React from 'react';
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Shield, AlertTriangle, CheckCircle, HardHat, Hand } from "lucide-react";

export default function DetectionStatus({ detectionResult, isDetecting }) {
  const equipmentStatus = [
    { 
      name: 'Helmet', 
      key: 'helmet',
      icon: HardHat,
      present: detectionResult ? !detectionResult.missing_equipment?.includes('helmet') : null 
    },
    { 
      name: 'Gloves', 
      key: 'gloves',
      icon: Hand,
      present: detectionResult ? !detectionResult.missing_equipment?.includes('gloves') : null 
    },
    { 
      name: 'Safety Vest', 
      key: 'safety_vest',
      icon: Shield,
      present: detectionResult ? !detectionResult.missing_equipment?.includes('safety_vest') : null 
    }
  ];

  return (
    <Card>
      <CardHeader>
        <CardTitle className="flex items-center gap-2">
          <Shield className="w-5 h-5 text-orange-600" />
          PPE Detection Status
        </CardTitle>
      </CardHeader>
      <CardContent className="space-y-4">
        {equipmentStatus.map((equipment) => (
          <div key={equipment.key} className="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
            <div className="flex items-center gap-3">
              <equipment.icon className={`w-6 h-6 ${
                equipment.present === true ? 'text-green-600' : 
                equipment.present === false ? 'text-red-600' : 'text-gray-400'
              }`} />
              <span className="font-medium">{equipment.name}</span>
            </div>
            {equipment.present === true && (
              <Badge className="bg-green-100 text-green-800">
                <CheckCircle className="w-3 h-3 mr-1" />
                Detected
              </Badge>
            )}
            {equipment.present === false && (
              <Badge className="bg-red-100 text-red-800">
                <AlertTriangle className="w-3 h-3 mr-1" />
                Missing
              </Badge>
            )}
            {equipment.present === null && (
              <Badge variant="outline" className="text-gray-500">
                Not Checked
              </Badge>
            )}
          </div>
        ))}

        {isDetecting && (
          <div className="mt-4 p-3 bg-blue-50 border border-blue-200 rounded-lg text-center">
            <div className="flex items-center justify-center gap-2 text-blue-700">
              <div className="w-2 h-2 bg-blue-700 rounded-full animate-ping" />
              <span className="font-medium">Detection in progress...</span>
            </div>
          </div>
        )}
      </CardContent>
    </Card>
  );
}
